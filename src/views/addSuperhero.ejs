<body>
    <div class="body-formulario fondo-oscuro">
    <div class="formulario-container">
        <h1>Creá tu Superhéroe</h1>
        <form id="formAgregar">
            <div class="form-grupo">
                <label for="nombreSuperheroe">Nombre del Superhéroe:</label>
                <input type="text" id="nombreSuperheroe" name="nombreSuperheroe"><br><br>
            </div>

            <div class="form-grupo">
                <label for="nombreReal">Nombre Real:</label>
                <input type="text" id="nombreReal" name="nombreReal" ><br><br>
            </div>

            <div class="form-grupo">
                <label for="edad">Edad:</label>
                <input type="number" id="edad" name="edad" ><br><br>
            </div>

            <div class="form-grupo">
                <label for="planetaOrigen">Planeta de Origen:</label>
                <input type="text" id="planetaOrigen" name="planetaOrigen"><br><br>
            </div>

            <div class="form-grupo">
                <label for="debilidad">Debilidad:</label>
                <input type="text" id="debilidad" name="debilidad"><br><br>
            </div>

            <div class="form-grupo">
                <label for="poderes">Poderes (separados por comas):</label>
                <input type="text" id="poderes" name="poderes"><br><br>
            </div>

            <div class="form-grupo">
                <label for="aliados">Aliados (separados por comas):</label>
                <input type="text" id="aliados" name="aliados"><br><br>
            </div>

            <div class="form-grupo">
                <label for="enemigos">Enemigos (separados por comas):</label>
                <input type="text" id="enemigos" name="enemigos"><br><br>
            </div>
            
            <button type="submit" id="btnCrearSuperheroe" class="boton-aceptar">Crear Superheroe</button>
        </form>
        <script src="/js/addScripts.js"> </script>
    </div>
</body>
